server {
    listen 80;
    server_name _;

    location = /favicon.ico { access_log off; log_not_found off; }
    
    location /static/ {
        root {{ app_dir }}/backend;
    }

    location /assets/ {
        alias {{ app_dir }}/frontend/dist/assets/;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:{{ app_dir }}/backend.sock;
    }
}
